<h1>New restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <%= f.submit %>
<% end %>

<%= link_to "Go Back", restaurants_path, class: "btn btn-primary" %>
